@model Pictourist.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Регистрация";
}

<form class="centered" method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Email"></label><br>
        <input asp-for="Email" type="email"/>
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Login"></label><br>
        <input asp-for="Login" />
        <span asp-validation-for="Login"></span>
    </div>
    <div>
        <label asp-for="Birthdate"></label><br>
        <input asp-for="Birthdate" type="date" min="1900-01-01" max="2009-10-16" id="dob" />
        <span asp-validation-for="Birthdate"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="PasswordConfirm"></label><br />
        <input asp-for="PasswordConfirm" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <div>
        <input type="submit" value="Регистрация" />
    </div>
</form>
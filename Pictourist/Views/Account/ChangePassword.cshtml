@{
    ViewBag.Title = "Изменение пароля";
}

<script type="text/javascript" charset="utf-8" src="~/js/firstScript.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-ajax-unobtrusive@3.2.6/dist/jquery.unobtrusive-ajax.min.js"></script>

<form method="post" id="dom" class="centered" asp-action="ChangePassword" asp-controller="Account"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-mode="replace"
      data-ajax-update="#dom">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label name="OldPassword" class="control-label">Старый пароль</label>
        <input type="text" name="OldPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label name="NewPassword" class="control-label">Новый пароль</label>
        <input type="text" name="NewPassword" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>
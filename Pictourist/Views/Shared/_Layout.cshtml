<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <meta name="viewport" content="width=device-width" />
    <title>Pictourist | @ViewBag.Title</title>
</head>
<body>
    <div id="header">
        <a href="/Home/Index">Главная</a> | 
        <a href="/Home/About">О проекте</a>
        
        @if (User.Identity.IsAuthenticated)
        {
            <span> | </span>
            <a href="/Users/Index">Найти друзей!</a>
            <span> | </span>
            <a href="/Friends/Index">Мои друзья</a>
            <span> | </span>
            <a href="/Users/MyPage">Мой профиль</a>
            <a href="/Account/ChangePassword" id="changePasswordUser">Изменить пароль</a>
            <div id="uAreLoginedAsText">Вы вошли как @User.Identity.Name</div>

            <form method="post" asp-controller="Account" asp-action="Logout">
                <input type="submit" id="exitButton" value="Выход" />
            </form>

            if (User.IsInRole("Admin"))
            {
                <a href="/Admin" id="adminPanel">Админ-панель</a>;
            }
        }
        else
        {
            <a href="/Account/Register" id="registryText">Регистрация</a>
            <span id="stickBetweenRegAndLogin"> | </span>
            <a href="/Account/Login" id="log-in">Войти</a>
        }
    </div>

    <h1>Pictourist</h1>
    <h2>@ViewBag.Title</h2>
    <div>
        @RenderBody()
    </div>

    <footer>
        <p>Pictourist since 2023.</p>
    </footer>
</body>
</html>
<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <meta name="viewport" content="width=device-width" />
    <title>Pictourist | @ViewBag.Title</title>
</head>
<body>
    <div id="header">
        <a href="/">Главная</a> |
        <a href="/Admin/Users">Пользователи сайта</a> |
        <a href="/Admin/Roles">Роли</a>
        @if (User.Identity.IsAuthenticated)
        {
            <div id="uAreLoginedAsText">Вы вошли как @User.Identity.Name</div>

            <form method="post" asp-area="default" asp-controller="Account" asp-action="Logout">
                <input type="submit" id="exitButton" value="Выход" />
            </form>
        }
    </div>

    <h1>Админ-панель Pictourist</h1>
    <h2>@ViewBag.Title</h2>
    <div>
        @RenderBody()
    </div>

    <footer>
        <p>Pictourist since 2023.</p>
    </footer>
</body>
</html>
@using Microsoft.AspNetCore.Identity;
@model Pictourist.Admin.ViewModels.ChangeRoleViewModel;

@{
    ViewBag.Title = $"Изменение ролей для пользователя {@Model.UserEmail}";
}

<form class="centered" asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
            @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />

            @role.Name <br />
        }
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>